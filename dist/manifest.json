{
  "name": "SideEye",
  "version": "0.0.1",
  "description": "Experience a moment of judgment while visiting distracting websites.",
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "https://*/",
    "http://*/"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48-on.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "js": ["js/content.js"],
      "css": ["css/style.css"],
      "matches": ["<all_urls>"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "web_accessible_resources": ["ttf/Space.ttf"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/48-off.png"
  },
  "manifest_version": 2
}
