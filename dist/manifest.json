{
  "name": "SideEye",
  "version": "1.0.0",
  "description": "Blacklist distracting websites and stay on top of your productivity.",
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://*/",
    "http://*/"
  ],
  "icons": {
    "16": "images/16.png",
    "48": "images/48-on.png",
    "128": "images/128.png"
  },
  "content_scripts": [
    {
      "css": ["css/style.css"],
      "js": ["js/content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "web_accessible_resources": ["ttf/Space.ttf"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/48-off.png"
  },
  "manifest_version": 2
}
